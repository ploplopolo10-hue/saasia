# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/novaia_db
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=novaia_db

# Session Configuration (required for Replit Auth)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Replit Auth Configuration
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.replit.dev,your-custom-domain.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create these in your Stripe Dashboard)
STRIPE_PRICE_ID_PREMIUM=price_premium_monthly_id
STRIPE_PRICE_ID_PRO=price_pro_monthly_id

# Application Configuration
NODE_ENV=development
PORT=5000

# OpenAI Configuration (for AI coaching features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Additional API Keys (optional)
NUTRITION_API_KEY=your-nutrition-api-key
FITNESS_API_KEY=your-fitness-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Security Configuration
JWT_SECRET=your-jwt-secret-key
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_NUTRITION_SCANNER=true
ENABLE_REAL_TIME_COACHING=true
ENABLE_ANALYTICS=true

# External Services
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Development Only
DEBUG=true
MOCK_STRIPE_PAYMENTS=false
MOCK_AI_RESPONSES=false
